{
  "compilerOptions": {
      //"module": "amd",
      "module": "none",
      "pretty": true,
      "lib": [
        "es2017",
        "dom"
      ],
      "target": "es5",
      //"target": "esnext",
      "moduleResolution": "node",

      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "composite": true,
      "noEmitOnError": true,

      "strictNullChecks": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictPropertyInitialization": true,
      "strictFunctionTypes": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,

      "skipLibCheck": true,

      "alwaysStrict": true,
      "preserveConstEnums": true,
      "newLine": "lf",

      "outDir": "./dist",
      "outFile": "./dist/bmbenchts.js",
      //"declarationDir": "./dist/types",
      //"types": ["node"],
      "sourceRoot":"./"
    },
    "include": [
      "./*.ts"
    ]
}